{
  "compilerOptions": {
    "target": "ES2022",

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,

    "rootDir": "src",
    "outDir": "dist",

    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
  
}
